<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
  		<record id="view_repair_set_origin" model="ir.ui.view">
            <field name="name">repair.set.origin.form</field>
            <field name="model">repair.set.origin</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Set origin document">
                	<group colspan="4" >
                		<separator string="Set origin" colspan="4"/>
              			<field name="origin" />
						<field name="date" />
                    </group>
					
                    <separator string="" colspan="4" />
                    <group colspan="4" col="6">
                    	<button icon="gtk-cancel" special="cancel" string="Cancel" />
                    	<button icon="gtk-save" string="Ok" name="set_origin" type="object" />
                    </group>
                </form>
            </field>
  		</record>
		<act_window name="Set Origin Document"		    
		    res_model="repair.set.origin"
		    src_model="repair.order"
		    view_mode="form"
		    target="new"        
            key2="client_action_multi"    
		    id="act_repair_set_origin"/>
    </data>
</openerp>