<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        
		<record id="view_not_repairable" model="ir.ui.view">
            <field name="name">Not Repairable</field>
            <field name="model">repair.order.norepair</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Not Repairable Order">
    		        <separator colspan="4" string="Product is not repairable at repair center" />
                    <group colspan="4" col="4">
                        <group colspan="2" col="4">
                            <label string="Dummy text for cancel order. Dummy text for cancel order. Dummy text for cancel order" />
                        </group>
                        <group colspan="2" col="4">
                            <field name="partner_id" colspan="4" on_change="on_change_partner(partner_id)"/>
                            <field name="address_id" colspan="4"/>
                            <field name="moveable" invisible="1"/>
                        </group>
                    </group>
                    <group colspan="4" col="4">
                        <group colspan="2" col="2">
                            <button icon="gtk-stop" name="create_delivery" string="Cancel" />
                        </group>
                        <group colspan="2" col="2">
                            <button name="create_delivery" string="Create Delivery for Supplier"
                                colspan="1" type="object" icon="terp-gtk-go-back-rtl" attrs="{'readonly':[('moveable','&lt;&gt;',True)]}"/>
                        </group>
                    </group>
                            
                </form>
            </field>
        </record>
        
        <record id="action_norepair" model="ir.actions.act_window">
            <field name="name">Not Repairable Order</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">repair.order.norepair</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record> 
        
	</data>
</openerp>	
