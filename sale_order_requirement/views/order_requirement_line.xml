<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_order_requirement_line_form" model="ir.ui.view">
            <field name="name">order.requirement.line.form</field>
            <field name="model">order.requirement.line</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Order Requirement">
                    <field context="" name="product_id"/>
                    <field name="stock_availability"/>
                    <field name="spare"/>
                    <field name="sale_order_id" />
                    <field name="state" />
                    <newline/>
                    <field name="new_product_id" on_change="onchange_product_id(new_product_id,qty,supplier_id,context)"/>
                    <field name="qty"/>
                    <field name="is_manufactured"/>
                    <field name="supplier_id" attrs="{'required': [('is_manufactured', '=', False)], 'readonly': [('is_manufactured', '=', True)]}"/>
                    <field name="supplier_ids" invisible="1"/>
                    <group colspan="8" col="8" states="draft">
                        <button name="confirm_suppliers" string="OK" type="object" icon="gtk-check"/>
                    </group>

                    <field name="temp_mrp_bom_ids" type="xml" nolabel="1" colspan="4"
                           attrs="{'invisible': [('temp_mrp_bom_ids','=',False)], 'readonly':[('is_manufactured','=',False)]}">
                        <tree string="BoM Structure" editable="top" create="0"
                            colors="aqua:row_color=='aqua';black:row_color=='black';blue:row_color=='blue';brown:row_color=='brown';cadetblue:row_color=='cadetblue';darkblue:row_color=='darkblue';fuchsia:row_color=='fuchsia';forestgreen:row_color=='forestgreen';orange:row_color=='orange';green:row_color=='green';grey:row_color=='grey';red:row_color=='red';">
                            <field name="row_color" invisible="1"/>
                            <field name="sequence" invisible="1"/>
                            <field name="complete_name"/>
                            <field name="product_id" on_change="onchange_product_id(product_id,product_qty,supplier_id)"/>
                            <field name="product_qty" readonly="1"/>
                            <field name="product_uom" readonly="1"/>
                            <field name="stock_availability"/>
                            <field name="spare"/>
                            <field name="is_manufactured" on_change="onchange_manufacture(is_manufactured)"/>
                            <field name="supplier_id" attrs="{'required': [('is_manufactured', '=', False)], 'readonly': [('is_manufactured', '=', True)]}"/>
                            <field name="supplier_ids" invisible="1"/>
                        </tree>
                    </field>
                </form>
           </field>
        </record>

        <record id="view_order_requirement_line_tree" model="ir.ui.view">
            <field name="name">order.requirement.line.tree</field>
            <field name="model">order.requirement.line</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Order Requirement" editable="top"
                    colors="aqua:row_color=='aqua';black:row_color=='black';blue:row_color=='blue';brown:row_color=='brown';cadetblue:row_color=='cadetblue';darkblue:row_color=='darkblue';fuchsia:row_color=='fuchsia';forestgreen:row_color=='forestgreen';orange:row_color=='orange';green:row_color=='green';grey:row_color=='grey';red:row_color=='red';">
                    <field name="row_color" invisible="1"/>
                    <field name="product_id"/>
                    <field name="new_product_id"/>
                    <field name="qty" />
                    <field name="stock_availability"/>
                    <field name="spare"/>
                    <field name="state" />
                    <button context="" name="action_open_bom" icon="gtk-execute" type="object" attrs="{'invisible': [('state','=','done')]}"/>
                </tree>
            </field>
        </record>

        <record id="action_view_order_requirement_line" model="ir.actions.act_window">
            <field name="name">Order Requirement Line</field>
            <field name="res_model">order.requirement.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</openerp>