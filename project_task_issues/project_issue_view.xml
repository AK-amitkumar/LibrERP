<?xml version="1.0"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="project_issue_form_view">
            <field name="name">Project Issue Tracker Form</field>
            <field name="model">project.issue</field>
            <field name="inherit_id" ref="project_issue.project_issue_form_view" />
            <field name="type">form</field>
            <field name="arch" type="xml">
                <field name="task_id" position="attributes">
                    <attribute name="required">True</attribute>
                </field>
                <field name="progress" position="replace">
                    <field name="remaining_hours" readonly="1" />
                </field>
                <xpath expr="//notebook/page[@string='Extra Info']" position="before">
                	<page string="Worklogs">
                        <field name="work_ids" colspan="4" nolabel="1" context="{'default_user_id' : user_id, 'default_task_id' : task_id}">
                            <tree editable="top" string="Timesheets">
                                <field name="date"/>
                                <field name="task_id" required="1" invisible="1"/>
                                <field name="name"/>
                                <field name="hours" widget="float_time"/>
                                <field name="user_id"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
